int alcoholSensorPin = A0; void setup() { Serial.begin(9600);
}
void loop() {
int sensorValue = analogRead(alcoholSensorPin); Serial.print("Alcohol Sensor Value: "); Serial.println(sensorValue);
delay(1000);
}


